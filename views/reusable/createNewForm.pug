extends ../layout
//- more reusable templates and passed in variables
block content
  h1= newFormTitle
  if newFormTitle === "New Book"
    - var columnNo = 0;
    form(action="/books", method="post")
      - console.log(columnArray)
      each value in columnArray
        if columnNo == 0
           p(class="id")
        else if columnNo > 0
          p
            label(for=`${value.toLowerCase()}`)= value
            input(id=`${value.toLowerCase()}` type="text" value=book.value)
        - columnNo += 1
      input(type="submit" value=`Create New ${title}`)
  else if newFormTitle === "New Patron"
    - var columnNo = 0;
    form(action="/patrons", method="post")
      - console.log(columnArray)
      each value in columnArray
        if columnNo == 0
           p(class="id")
        else if columnNo > 0
          p
            label(for=`${value.toLowerCase()}`)= value
            input(id=`${value.toLowerCase()}` type="text")
        - console.log(columnNo, columnArray[columnNo])
        - columnNo += 1
      input(type="submit" value=`Create New ${title}`)
  else if newFormTitle === "New Loan"
    - var columnNo = 0;
    form(action="/loans", method="post")
      - console.log(columnArray)
      each value in columnArray
        if columnNo == 0
           p(class="id")
        else if columnNo == 1
           p
             label(for="book_id") Book
             select(id="book_id")
               option(value="1") Harry Potter and the Philosopher's Stone
               option(value="2") Harry Potter and the Chamber of Secrets
               option(value="3") Harry Potter and the Prisoner of Azkaban
               option(value="4") Harry Potter and the Goblet of Fire
               option(value="5") Harry Potter and the Order of the Phoenix
               option(value="6") Harry Potter and the Half-Blood Prince
               option(value="7") Harry Potter and the Deathly Hallows
               option(value="8") A Brief History of Time
               option(value="9") The Universe in a Nutshell
               option(value="10") Frankenstein
               option(value="11") The Martian
               option(value="12") Ready Player One
               option(value="13") Armada
               option(value="14") Pride and Prejudice
               option(value="15") Emma
        else if columnNo == 2
           p
             label(for="patron_id") Patron
             select(id="patron_id")
              option(value="1") Andrew Chalkley
              option(value="2") Dave McFarland
              option(value="3") Alena Holligan
              option(value="4") Michael Poley
        else if columnNo == 3
           p
            label(for="loaned_on") Loaned on:
            input(id="loaned_on" type="text" value="Sun May 22 2016 17:00:00 GMT-0700 (PDT)")
        else if columnNo == 4
           p
            label(for="return_by") Return by:
            input(id="return_by" type="text" value="Sun May 29 2016 17:00:00 GMT-0700 (PDT)")
        - console.log(columnNo, columnArray[columnNo])
        - columnNo += 1
      input(type="submit" value=`Create New ${title}`)
