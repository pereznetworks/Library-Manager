table
  thead
    - var columnNo = 0;
    tr
      each value in columnArray
        if columnNo == 0
          th(class="id")= value
        if columnNo > 0
          th= value
        - columnNo += 1
  tbody
    tr
      - var rowCellNo = 0;
      each item, index in rowArray
        if rowCellNo == 0
          td(class="id")= item
        else if rowCellNo == 1
          td
            a(href=bookHrefPath + '/' + rowCellNo)= item
        else if rowCellNo == 2
          td
            a(href=patronHrefPath)= item
        else if rowCellNo == 6
          if title == "Loans" && item === 'Return Book'
            td
              a(href=actionHrefPath + '/' + rowCellNo class="button")= item
          else if title = "Book"
            td
              a(href=actionHrefPath + '/' + rowCellNo class="button")= item
        else
            td= item
        - rowCellNo += 1
